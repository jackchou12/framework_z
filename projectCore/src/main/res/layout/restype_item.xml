        android:layout_marginRight="20dp"
        app:labelTextColor="@drawable/bq_text_bg2"
        app:labelTextSize="14sp"
        app:labelTextWidth="wrap_content"
        app:labelTextHeight="35dp"
        app:lineMargin="10dp"
        app:wordMargin="10dp"
        app:selectType="SINGLE"
        app:maxLines="3"
        app:maxSelect="1"
